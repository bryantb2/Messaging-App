
@{
    ViewData["Title"] = "ManageChats";
    Layout = "_Layout";
}
@model ManageChatsViewModel
    <section class="my-5">
        <!-- MESSAGE MODAL -->

        <div class="modal fade" id="modal-register" role="dialog" aria-labelledby="modal-register-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header row mx-0">
                        <div class="col-10">
                            <h3 class="modal-title" id="modal-register-label">Create Chat</h3>
                        </div>
                        <div class="col-2">
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                            </button>
                        </div>
                        <div class="col-12">
                            <p>Fill out the Fields Below:</p>
                        </div>
                    </div>

                    <div class="modal-body">
                        <form role="form" asp-controller="Admin" asp-action="AddMessage" method="post" class="registration-form">
                            <div class="form-group">
                                <label class="sr-only" asp-for="chat.ChatName">Chat Title</label>
                                <input asp-for="chat.ChatName" type="text" placeholder="Chat title..." class="form-first-name form-control" id="chatName">
                            </div>
                            <button type="submit" class="btn btn-primary">Build ChatRoom</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- END OF MESSAGE MODAL -->
        <div class="p-4 text-center">
            <h1 class="pageHeaderCustom text-light">Chatroom Management</h1>
        </div>
        <div class="row">
            <div class="col-6 col-md-12">
                <div class="p-4 text-center">
                    <h2 class="pageHeaderCustom text-light">Active Chats</h2>
                </div>
                <table class="table bg-light table-striped w-100 table-hover">
                    <thead>
                        <tr>
                            <th scope="col">ID#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Created On</th>
                            <th scope="col">Most Recent Activity</th>
                            <th scope="col"># of Posts</th>
                            <th scope="col">View</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody id="messageTableBody">
                        @foreach (ChatViewModel c in Model.ActiveChats)
                        {
                            <tr>
                                <th scope="row">@c.ChatID</th>
                                <td class="titleLimit">@c.Name</td>
                                <td>@c.DateCreated</td>
                                <td><a data-toggle="modal" data-target="#viewMsgModal" class="view" href="#" data-msg-type="message" data-value=@m.MessageID onclick="viewMsgEvent(event)"><i class="fa fa-eye"></i></a></td>
                                <td><a data-toggle="modal" data-target="#editModal" class="edit " href="#" data-msg-type="message" data-value=@m.MessageID onclick="editMsgEvent(event)"><i class="fa fa-edit"></i></a></td>
                                <td><a class="trash " href="#" data-msg-type="message" data-value=@m.MessageID onclick="deleteMsgEvent(event)"><i class="fa fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
</section>
