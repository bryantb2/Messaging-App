
@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}
<section class="homePageContainer">
    <div class="container p-0">
        <div class="row">
            <div class="col-6">
                <article class="contextBoxRestricted text-light">
                    <!--Form design borrowed from https://codepen.io/juff03/pen/OXaXRG -->
                    <div class="container contactFormContainer p-0">
                        <form class="well form-horizontal" asp-controller="Messaging" asp-action="GenerateMessage" method="post" id="contact_form">
                            <fieldset>

                                <!-- Form Name -->
                                <legend><span class="p-3 pageHeaderCustom">Contact Us!</span></legend><br>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label for="topic" class="col-md-6 control-label text-light">Thread Topic for Post</label>
                                    <div class="col-md-6 selectContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                            <select name="topic" class="form-control selectpicker text-dark">
                                                <option value="">Select a discussion thread</option>
                                                <option value="general">General Chat</option>
                                                <option value="starwars">Star Wars Chat</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label for="username" class="col-md-6 control-label text-light">Username</label>
                                    <div class="col-md-6 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="username" placeholder="Username" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label for="messageTitle" class="col-md-6 control-label text-light">Message Header</label>
                                    <div class="col-md-6 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="messageTitle" placeholder="Title" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label for="messageContent" class="col-md-6 control-label text-light">Message</label>
                                    <div class="col-md-6 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                            <textarea name="messageContent" placeholder="Write message here" class="form-control limitedInputTextArea" type="text"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <!-- Select Basic -->
                                <!-- Success message -->
                                <div class="alert alert-success halfWidthLimiter" role="alert" id="success_message">Success! <i class="glyphicon glyphicon-thumbs-up"></i></div>

                                <!-- Button -->
                                <div class="form-group">
                                    <label class="col-md-6 control-label"></label>
                                    <div class="col-md-6">
                                        <br>
                                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div><!-- /.container -->
                </article>
            </div>
            <div class="col-6">
                <article class="messageContentBoxRestricted">
                    <div class="d-flex justify-content-left">
                        <div class="pageSelectorContainer">
                            <p class="d-flex pt-4 text-light">
                                Please select a genre to view posts from other users!
                            </p>
                        </div>
                        <div class="dropdown p-4">
                            <button class="dropdownMenuButton btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Explore Forum Posts
                            </button>
                            <div class="dropdown-menu p-4" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Messaging" asp-action="GeneralForum">General Chat</a>
                                <a class="dropdown-item" asp-controller="Messaging" asp-action="StarwarsForum">Star Wars Chat</a>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
    
    
</section>
